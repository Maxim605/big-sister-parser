{
    "name": "big-sister-parser",
    "version": "0.0.1",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "gen-thrift": "mkdirp src/thrift/gen-nodejs && thrift -r --gen js:node -out src/thrift/gen-nodejs src/thrift/arango.thrift && mkdirp dist/thrift/gen-nodejs && cpx \"src/thrift/gen-nodejs/*\" dist/thrift/gen-nodejs/",
        "cli": "npx ts-node -r tsconfig-paths/register src/cli.ts",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "npm run gen-thrift && nest start",
        "start:dev": "npm run gen-thrift && cross-env NODE_ENV=development nest start --watch",
        "start:debug": "npm run gen-thrift && cross-env NODE_ENV=development nest start --debug 9229 --watch",
        "start:prod": "npm run gen-thrift && node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prettier": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json|css|scss|less|sass)\"",
        "migrate:arango": "npm run gen-thrift && ts-node src/migrations/1751961990-InitMigration.ts"
    },
    "engines": {
        "node": ">=24.0.0 <25.0.0"
    },
    "dependencies": {
        "@nestjs/common": "10.4.19",
        "@nestjs/core": "10.4.19",
        "@nestjs/config": "4.0.2",
        "@nestjs/microservices": "10.4.19",
        "@nestjs/platform-express": "10.4.19",
        "@nestjs/swagger": "7.4.2",
        "arangojs": "10.1.1",
        "axios": "1.10.0",
        "chalk": "4.1.2",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.0",
        "luxon": "3.4.3",
        "nest-commander": "3.16.0",
        "reflect-metadata": "0.1.14",
        "rxjs": "7.8.1",
        "thrift": "0.16.0"
    },
    "devDependencies": {
        "@nestjs/axios": "4.0.1",
        "@nestjs/cli": "10.0.0",
        "@types/node": "20.19.9",
        "cpx": "1.5.0",
        "cross-env": "7.0.3",
        "eslint": "8.42.0",
        "jest": "29.5.0",
        "mkdirp": "3.0.1",
        "prettier": "3.0.0",
        "ts-jest": "29.1.0",
        "ts-node": "10.9.1",
        "typescript": "5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "main": "index.js",
    "keywords": [],
    "description": ""
}
